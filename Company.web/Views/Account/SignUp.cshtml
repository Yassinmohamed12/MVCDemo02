@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/AuthentcationLayout.cshtml";
}

<h1>SignUp</h1>
@using (Html.BeginForm("SignUp", "Account", FormMethod.Post))
{
	@Html.ValidationSummary(false, "", new {@class = "text-white"})

<form asp-action="SignUp" class="login100-form validate-form" enctype ="multipart/form-data">
					<span class="login100-form-logo">
						<i class="zmdi zmdi-landscape"></i>
					</span>

					<span class="login100-form-title p-b-34 p-t-27">
						Log in
					</span>

					<div class="wrap-input100 validate-input" data-validate = "Enter FirstName">
						<input class="input100" type="text" name="FirstName" placeholder="FirstName" asp-for="FirstName">
						<span class="focus-input100" data-placeholder="&#xf207;" asp-validation-for="FirstName"></span>
					</div>

							<div class="wrap-input100 validate-input" data-validate = "Enter LastName">
						<input class="input100" type="text" name="LastName" placeholder="LastName" asp-for="LastName">
						<span class="focus-input100" data-placeholder="&#xf207;" asp-validation-for="LastName"></span>
					</div>

						<div class="wrap-input100 validate-input" data-validate = "Enter Email">
						<input class="input100" type="text" name="Email" placeholder="Email" asp-for="Email">
						<span class="focus-input100" data-placeholder="&#xf207;" asp-validation-for="Email"></span>
					</div>

					<div class="wrap-input100 validate-input" data-validate="Enter password">
						<input class="input100" type="password" name="Password" placeholder="Password" asp-for="Password">
						<span class="focus-input100" data-placeholder="&#xf191;" asp-validation-for="Password"></span>
					</div>

						<div class="wrap-input100 validate-input" data-validate="Enter ConfirmPassowrd">
						<input class="input100" type="password" name="ConfirmPassowrd" placeholder="ConfirmPassowrd" @* asp-for="ConfirmPassowrd" *@>
						<span class="focus-input100" data-placeholder="&#xf191;" asp-validation-for="ConfirmPassowrd"></span>
					</div>

					<div class="contact100-form-checkbox">
						<input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
						<label class="label-checkbox100" for="ckb1">
							Remember me
						</label>
					</div>

					<div class="container-login100-form-btn">
						<button class="login100-form-btn" asp-action="SignUp">
							Login
						</button>
					</div>

					<div class="text-center p-t-90">
						<a class="txt1" href="#">
							Forgot Password?
						</a>
					</div>
				</form>
}
