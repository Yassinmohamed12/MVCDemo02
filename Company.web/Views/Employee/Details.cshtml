<form asp-action="Edit" asp-route-id="@Model.Id">
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input type="text" asp-for="Age" class="form-control" readonly />
    </div>
        <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input type="text" asp-for="Address" class="form-control" readonly />
    </div>
        <div class="form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input type="text" asp-for="PhoneNumber" class="form-control" readonly />
    </div>
    </div>
        <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input type="text" asp-for="Salary" class="form-control" readonly />
    </div>
        <div class="form-group">
        <label class="col-form-label" asp-for="ImageUrl"></label>
        <input type="text" asp-for="ImageUrl" class="form-control" readonly />
    </div>

        <div class="form-group">
        <label class="col-form-label" asp-for="HiringDate"></label>
        <input type="text" asp-for="HiringDate" class="form-control" readonly />
    </div>

        <div class="form-group">
        <label class="col-form-label">Department</label>
        <input type="text" class="form-control" value="@ViewBag.Department.Name" readonly />
    </div>

    <input type="submit" value="Edit" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>
