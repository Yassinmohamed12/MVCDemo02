@model IEnumerable<Employee>;
@{
    ViewData["Title"] = "Details";
}

@if (Model.Count() > 0)
{
                <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(e => e.Id)</th>
                        <th>@Html.DisplayNameFor(d => d.Name)</th>
                        <th>@Html.DisplayNameFor(d => d.CreatedAt)</th>
                        <th>@Html.DisplayNameFor(d => d.Address)</th>
                        <th>@Html.DisplayNameFor(d => d.Age)</th>
                        <th>@Html.DisplayNameFor(d => d.Salary)</th>
                        <th>@Html.DisplayNameFor(d => d.PhoneNumber)</th>
                        <th>Details</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var employee in Model)
            {
                            <tr>
                                <td>@employee.Id</td>
                                        <td>@employee.Name</td>
                                        <td>@employee.CreatedAt</td>
                                                 <td>@employee.Address</td>
                                                <td>@employee.Age</td>
                                                <td>@employee.Salary</td>
                                                <td>@employee.PhoneNumber</td>
                                <td>
                                     <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-warning">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                </td>
                            </tr>
            }

                </tbody>
            </table>

}
else
{
                <div class="mt-5 alert alert-warning">
                <h3>There are no Details</h3>
            </div>

}


